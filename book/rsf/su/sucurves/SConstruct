curves = []
for c in range(len(points)):
    curve = 'curve%d.txt' % c
    Flow(curve,None,'echo ' + points[c])
    curves.append(curve)

Flow('image',None,'suplane | sufilter')

Result('image1',['image']+curves[:3],
       '''
       suximage npair=3,3,3 curve=%s curvecolor=red,black,cyan 
       xbox=50 ybox=50
       ''' % ','.join(curves[:3]))

Result('image2',['image']+curves[:3],
       '''
       suxwigb npair=3,3,3 curve=%s curvecolor=red,black,cyan 
       xbox=650 ybox=50
       ''' % ','.join(curves[:3]))

Result('image3',['image',curves[3]],
       '''
       suxwigb npair=96 curve=${SOURCES[1]} curvecolor=red 
       xbox=650 ybox=50 
       ''')

End()

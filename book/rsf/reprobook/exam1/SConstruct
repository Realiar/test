#########################################################
# Setting up
#########################################################

from rsf.proj import *

#########################################################
# Making 1-D spike data
#########################################################

Flow('spike',None,
     'spike n1=1000 nsp=2 k1=300,600 mag=1.0,2.0')

#########################################################
# Generating graphics file
#########################################################

Plot('spike-graph','spike','graph title="Hello world!" ')
Plot('spike-dot','spike','dots title="Hello world!"')

#########################################################
# Generating final graphics file
#########################################################

Result('spike','spike-graph spike-dot','OverUnderAniso')
    
#########################################################
# Makeing 1-D synthetic trace with 5Hz Ricker wavelet
#########################################################

Flow('wave','spike','ricker1 frequency=5')

#########################################################
# Displaying the data with graph
#########################################################

Result('wave',
       'graph symbol=y title="Two Ricker wavelets" ')

#########################################################
# Wrapping up
#########################################################

End()
